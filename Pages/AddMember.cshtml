@page
@model AddMemberModel

@{
    ViewData["Title"] = "Add Member";
}

<!DOCTYPE html>
<html>
 <head>
    <style>
        .error{
            border-radius: 20px ;
            font-family: "Roboto", sans-serif;
            text-transform: uppercase;
            outline: 0;
            border-radius: 15px;
            width: 100%;
            border: 0;
            padding: 15px;
            color: red;
            font-size: 14px;
            -webkit-transition: all 0.3 ease;
            transition: all 0.3 ease;
        }
        div.panel-alert:empty {
            display: none;
        }
    </style>
</head>

    <body>
        <div class="div.panel-alert:empty error">@Model.output_msg</div>
        <form method = "post">
            <legend>@ViewData["Title"]</legend>
            <p><label>First Name:</label>
                @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" })        
            </p>       

            <p><label>Last Name:</label>
                @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })        
            </p>

            <p><label>Card Number:</label>
                @Html.TextBoxFor(m => m.cardNumber, new { @class = "form-control" })        
            </p>

            <p><label>Last Visit:</label>
                @Html.TextBoxFor(m => m.lastVisit, new { @type="date", @class = "form-control datepicker" })        
            </p>            

            <button type="submit">Add Member</button>
            <p><a asp-page="/Members" asp-area="" button type="button" class="btn btn-primary">See all Members</a></p>           
        </form>    
    </body>
</html>
@page
@model CollectionsModel
@{
    ViewData["Title"] = "Collections Dashboard";
}
<h1>@ViewData["Title"]</h1>
</br>
<body>
    <div class="container">
        <div class="col-md-6 col-md-offset-3">

            <div class="wrap">
                @* <div class="search">
                    <input type="text" class="searchTerm" placeholder="Search for exhibitions">
                    <button type="submit" class="btn btn-secondary">Search</button>
                </div> *@
            </div>

            <a asp-page="/AddCollection" asp-area="" button type="button" class="btn btn-primary">New collection</a>

        </div>
        <br /><br />
        
        <div class = "table">
            <table class ="table table-striped table-bordered table-hover">
                <thead>
                    <tr> @{
                            foreach(var col in new[]{"Collection", "Description", ""}) { 
                                <th> @col </th> }    
                        }
                    </tr>
                </thead>
                <tbody>
                @{
                    if (Model != null) {
                        foreach(Collection collection in CollectionsModel.collections) {
                            <tr>
                                <td>@collection.CollectionName</td>
                                <td>@collection.Description</td>
                                <td>
                                    <div class="col">
                                        <a asp-page="/EditCollection" asp-area="" asp-route-id=@collection.CollectionName button type="button" class="btn btn-outline-warning m-1">Edit</a>
                                        <a asp-page="/DeleteCollection" asp-area="" asp-route-id=@collection.CollectionName button type="button" class="btn btn-outline-danger m-1">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</body>
@page
@model CollectionsModel
@{
    ViewData["Title"] = "Collections Dashboard";
}
<h1>@ViewData["Title"]</h1>

<body>
    <div class="container">
        <div class="col-md-6 col-md-offset-3">

            <div class="wrap">
                @* <div class="search">
                    <input type="text" class="searchTerm" placeholder="Search for exhibitions">
                    <button type="submit" class="btn btn-secondary">Search</button>
                </div> *@
            </div>

            <a asp-page="/AddCollection" asp-area="" button type="button" class="btn btn-primary">New Collection</a>

        </div>
        <br /><br />
        
        <div class = "table">
            <table class ="table table-striped table-bordered table-hover">
                <thead>
                    <tr> @{
                            foreach(var col in new[]{"Collection Name", "Description"}) { 
                                <th> @col </th> }    
                        }
                    </tr>
                </thead>
                <tbody>
                @{
                    if (Model != null) {
                        foreach(Collection c in CollectionsModel.collections) {
                            <tr>
                                <td>@c.CollectionName</td>
                                <td>@c.Description</td>
                            </tr>
                        }
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</body>
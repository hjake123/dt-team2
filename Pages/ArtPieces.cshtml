@page
@model ArtPiecesModel
@{
    ViewData["Title"] = "Art Piece Dashboard";
}
<h1>@ViewData["Title"]</h1>
</br>
<body>
    <div class="container">
        <div class="col-md-6 col-md-offset-3">

            <div class="wrap">
                @* <div class="search">
                    <input type="text" class="searchTerm" placeholder="Search for exhibitions">
                    <button type="submit" class="btn btn-secondary">Search</button>
                </div> *@
            </div>

            <a asp-page="/PieceAdd" asp-area="" button type="button" class="btn btn-primary">New art piece</a>

        </div>
        <br /><br />
        
        <div class = "table">
            <table class ="table table-striped table-bordered table-hover">
                <thead>
                    <tr> @{
                            foreach(var col in new[]{"Title", "Creator", "Description", "Place of origin", "Date of creation", "Date of submission", "Source", "Dimension", "Medium"}) { 
                                <th> @col </th> }    
                        }
                    </tr>
                </thead>
                <tbody>
                @{
                    if (Model != null) {
                        foreach(ArtPiece artpiece in ArtPiecesModel.pieces) {
                            <tr>
                                <td>@artpiece.title</td>
                                <td>@artpiece.creator</td>
                                <td>@artpiece.desc</td>
                                <td>@artpiece.origin</td>
                                <td>@artpiece.makedate.ToString("MMMM d, yyyy")</td>
                                <td>@artpiece.getdate</td>
                                <td>@artpiece.source</td>
                                <td>@artpiece.dim</td>
                                <td>@artpiece.medium</td>
                                <td>
                                    <div class="col">
                                        <a asp-page="/EditArtPiece" asp-area="" asp-route-id="@artpiece.title" button type="button" class="btn btn-outline-warning m-1">Edit</a>
                                        <a asp-page="/DeleteArtPiece" asp-area="" asp-route-id="@artpiece.title" button type="button" class="btn btn-outline-danger m-1">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</body>